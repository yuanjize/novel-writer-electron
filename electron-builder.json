{
  "appId": "com.novelwriter.app",
  "productName": "AI小说创作器",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/",
    "category": "Office"
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "novel-writer-electron"
  }
}
